using System;

namespace Bubble_sort
{
    class Program
    {
        static void Main(string[] args)
        {
            var array = new int[] // Объявляем массив:
            {
                8,7,6,5,4,3,2,1
            };
            BubbleSort(ref array);
            foreach (int elem in array)
            {
                Console.Write("{0} ",elem);
            }
            Console.WriteLine();
        }

        /*Алгоритм:
        1. Проходим по массиву с целыми значениями от первого элемента до предпоследнего (чтобы не вылезать за границы)
        2. Проходя по массиву, если текущий элемент больше следующего мы меняем их местами и запоминаем это
        3. Если обмен за весь проход по массиву произошел возвращаемся к первому пункту, в ином случае алгоритм завершен
        */
        
        static void BubbleSort(ref int[] array)   // Передаем по ссылке массив который мы будем сортировать
        {
            bool ArraySwapped = true; // Добавляем переменную фиксирующую, был ли произведен обмен 
            do
            {
                ArraySwapped = false;
                for (int i = 0; i < array.Length - 1; i++)
                {
                    if (array[i] > array[i + 1])
                    {
                        int temp = array[i];
                        array[i] = array[i + 1];
                        array[i + 1] = temp;
                        ArraySwapped = true;
                    }
                }
            }
            while (ArraySwapped);
            return array;
        }
    }
}

